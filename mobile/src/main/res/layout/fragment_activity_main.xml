    <Button
        android:id="@+id/sms_one"
        android:text="This is some text"
        style="@style/ReceivedMessageTextView"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/sms_two"
        android:longClickable="true">
    </Button>
    <Button
        android:id="@+id/sms_two"
        android:text="This is some more text in another message with text that wraps to a second line "
        style="@style/SentMessageTextView"
        android:layout_above="@+id/progress"
        android:longClickable="true"
        android:layout_alignParentRight="true">
    </Button>
    <ProgressBar android:id="@+id/progress"
