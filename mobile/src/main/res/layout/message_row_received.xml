<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView android:id="@+id/contact"
        style="@style/ContactBadge"
        android:minWidth="70dp"
        android:scaleType="fitCenter"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_launcher"/>

    <!-- On Sent Messages, @Override the style -->
    <TextView android:id="@+id/message"
        android:layout_below="@+id/date"
        android:layout_toRightOf="@+id/contact"
        android:text="This is some more text in another message with text that wraps to a second line "
        style="@style/ReceivedMessageTextView"/>

    <TextView android:id="@+id/date"
        style="@style/MessageDate"
        android:text="datetime"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>
